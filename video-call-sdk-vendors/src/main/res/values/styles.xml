<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.Lobby" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/lobbyColorPrimary</item>
        <item name="colorPrimaryDark">@color/lobbyColorPrimaryDark</item>
        <item name="colorAccent">@color/lobbyColorAccent</item>

        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorHint">@color/lobbyHint</item>

        <item name="alertDialogTheme">@style/CustomMaterialDialog</item>
    </style>

    <style name="AppTheme.Lobby.PopupMenu" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
    </style>

    <style name="CustomMaterialDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialThemeOverlay">@style/AlertDialogOverlay</item>
    </style>

    <style name="AlertDialogOverlay">
        <item name="colorOnSurface">@color/colorPrimary</item>
        <item name="colorSurface">@color/colorAccent</item>
    </style>
</resources>